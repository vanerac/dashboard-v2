{
  "extends": "../../packages/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./build",
    "resolveJsonModule": true,
    "baseUrl": "../../",
    "paths": {
      "@area/*": [
        "packages/*"
      ],
      "@services/*": [
        "packages/services/*"
      ],
      "@ui/*": [
        "packages/ui/*"
      ],
      "@utils/*": [
        "packages/utils/*"
      ],
      "@tools/*": [
        "apps/api/src/tools/*"
      ],
      "@*": [
        "apps/api/src/*"
      ]
    }
  },
  "include": [
    "index.ts",
    "src"
  ]

}
